<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/appColor</item>
        <item name="colorAccent">@color/appColor</item>
    </style>

    <style name="AppTitleText">
        <item name="android:color">@color/appBlack</item>
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily">@font/open_sans_condensed_bold</item>
    </style>

    <style name="AppInfoText">
        <item name="android:color">@color/appBlack</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/open_sans_condensed_light</item>
    </style>

    <style name="AppActionButton">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/appWhite</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:fontFamily">@font/open_sans_condensed_bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppEditText">
        <item name="android:textColor">@color/appBlack</item>
        <item name="android:background">@drawable/edittext_bg</item>
        <item name="android:textColorHint">@color/appGrey</item>
        <item name="android:fontFamily">@font/open_sans_condensed_light</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="PhoneEditText" parent="AppEditText">
        <item name="android:maxLength">9</item>
        <item name="android:inputType">number</item>
        <item name="android:fontFamily">@font/open_sans_condensed_bold</item>
        <item name="android:gravity">start</item>
    </style>

</resources>
